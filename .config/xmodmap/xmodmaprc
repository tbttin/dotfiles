! make Caps_Lock mod3 Mode_switch
remove Lock = Caps_Lock
keycode  66 = Mode_switch NoSymbol Mode_switch
remove mod5 = Mode_switch
add mod3 = Mode_switch

! Arrow keys binding
keycode 38 = a A Left Left
keycode 39 = s S Down Down
keycode 40 = d D Up Up
keycode 41 = f F Right Right
keycode  65 = space NoSymbol Caps_Lock 
