# Maintainer: Tin Thai <thaibachthanhtin@google mail dot com>

pkgname='rmah'
pkgver=1
pkgrel=1
pkgdesc='rank all mirrors of pacman-mirrorlist using alpm hook'
arch=('any')
url='https://github.com/tbttin/dotfiles/blob/main/.config/rmah/PKGBUILD'
license=('unknown')
source=('rank-mirrors.hook'
        'rank-mirrors.sh')
sha256sums=('802edaef9002d745687936d38d137fe3b4bad0f5ae42020cfe761a49b8f535a0'
            '36a7cae38a4c7b6b254a1f7bb574dc50571b46607e16995aa413a1c5cf2838d7')

package() {
  /usr/bin/install -Dm644 rank-mirrors.hook "$pkgdir"/usr/share/libalpm/hooks/rank-mirrors.hook
  /usr/bin/install -Dm755 rank-mirrors.sh   "$pkgdir"/usr/share/libalpm/scripts/rank-mirrors
}

# vim: ft=PKGBUILD
