$include /etc/inputrc

#
# TURN ON VIM (E.G. FOR READLINE)
#
set editing-mode vi
# Vi editing mode key bindings.
$if mode=vi
  # SHOW THE VIM MODE IN THE PROMPT (COMMAND OR INSERT)
  set show-mode-in-prompt on
  # SET THE MODE STRING AND CURSOR TO INDICATE THE VIM MODE
  $if term=linux
    set vi-ins-mode-string \1\e[?2c\2
    set vi-cmd-mode-string \1\e[?8c\2
  $else
    set vi-ins-mode-string \1\e[4 q\2
    set vi-cmd-mode-string \1\e[2 q\2
  $endif
  #
  # NORMAL MODE MAPPINGS.
  set keymap vi-command
  j: history-search-forward
  k: history-search-backward
  #
  # INSERT MODE MAPPINGS.
  set keymap vi-insert
  # Redirect both 1 and 2 to less. Overide default history search.
  "\C-r": "\eA2>&1 | less"
  # Expand alias. Just overide self-insert.
  "\C-e": alias-expand-line
$endif

#
# TAB COMPLETION. DOES IT FAMILIAR?
#
set show-all-if-ambiguous on
# Tab.
TAB: menu-complete
# Shift+Tab.
"\e[Z": menu-complete-backward

#
# COLOR FILES BY TYPES
#
# Note that this may cause completion text blink in some terminals (e.g. xterm).
set colored-stats on
# Append char to indicate type.
set visible-stats on
# Mark symlinked directories.
set mark-symlinked-directories on
# Color the common prefix.
set colored-completion-prefix on
# Color the common prefix in menu-complete.
set menu-complete-display-prefix on

