# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s
# ß 
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format = "i3bar"
        colors = true
        interval = 5
}

order += "wireless _first_"
wireless _first_ {
	# there is " " before %quality (100%)
        format_up = "W: %essid (%quality)"
        format_down = "W: down"
	format_quality = "%d%s"
}

order += "volume master"
volume master {
        format = "volume = %volume"
        format_muted = "muted (%volume)"
	device = "default"
}

order += "disk /home"
disk "/home" {
        format = "%avail"
	prefix_type = "binary"
	low_threshold = 5
	threshold_type = "gbytes_avail"
	format_below_threshold = "LOW storage: %avail"
}

# It’s possible to define a threshold_degraded and a threshold_critical to color the status bar output in yellow or red,
# if the available memory falls below the given threshold. 
order += "memory"
memory {
        format = "%free | %available"
	memory_used_method = "classical"
        threshold_degraded = "1G"
	threshold_critical = "512M"
        format_degraded = "Memory LOW: %available"
}

order += "cpu_temperature 0"
cpu_temperature 0 {
	format = "%degrees °C"
	max_threshold = 50
}

order += "cpu_temperature 1"
cpu_temperature 1 {
	format = "%degrees °C"
	max_threshold = 50
}

order += "load"
load {
        format = "%1min"
}

order += "cpu_usage"
cpu_usage {
	format = "%usage"
	max_threshold = "95"
	format_above_threshold = "%usage"
	degraded_threshold = "70"
	format_above_degraded_threshold = "%usage"
}

order += "tztime local"
tztime local {
        format = "%a %m-%d %H:%M"
}
