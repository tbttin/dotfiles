# vim first modeline
# vim: filetype=xdefaults

URxvt.perl-ext:
URxvt.perl-ext-common:

URxvt.font:     xft:bitstream vera sans mono:size=11:antialias=true
URxvt.boldFont: xft:bitstream vera sans mono:bold:size=11:antialias=true

! Hide scrollbar
URxvt.scrollBar: false

! Disable Ctrl+Shift
! You've disabled keycap picture insert mode but not basic ISO 14755 mode. To disable both, set both to false.
URxvt.iso14755: false
URxvt.iso14755_52: false

! Disable scrolling.
URxvt*saveLines: 0

!! Do not scroll with output.
!URxvt*scrollTtyOutput: false
!
!! Scroll in relation to buffer (with mouse scroll or Shift+Page Up).
!URxvt*scrollWithBuffer: true
!
!! Scroll back to the bottom on keypress.
!URxvt*scrollTtyKeypress: true
