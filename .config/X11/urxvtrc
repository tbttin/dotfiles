! vim: ft=xdefaults cms=!%s

! Disable Perl extentions.
URxvt.perl-ext:
URxvt.perl-ext-common:

! Still know nothing about fonts.
URxvt.font: xft:bitstream vera sans mono:size=11:antialias=true
URxvt.boldFont: xft:bitstream vera sans mono:bold:size=11:antialias=true

! Hide scrollbar.
URxvt.scrollBar: false

! Disable Ctrl+Shift.
! You have disabled keycap picture insert mode but not basic ISO 14755 mode. To disable both, set both to false.
URxvt.iso14755: false
URxvt.iso14755_52: false

! Disable mouse scroll. Use less instead.
URxvt*saveLines: 0
