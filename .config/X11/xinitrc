#!/bin/bash

# Remap some keys.
mf="${HOME}/.config/X11/xmodmap/xmodmaprc"
[[ -f "${mf}" ]] && /usr/bin/xmodmap "${mf}"

#
# Start a window manager and other things.
#
# Suckless status monitor.
/usr/bin/slstatus &

# Locker trigger.
/usr/bin/xss-lock -- /usr/bin/slock &

# Suckless terminal.
/usr/bin/st &

# Firefox browser.
/usr/bin/firefox &

# Start dynamic window manager.
exec /usr/bin/dwm

