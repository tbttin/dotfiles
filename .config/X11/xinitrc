#!/bin/sh

# Remap some keys.
[[ -f "${XDG_CONFIG_HOME}/X11/xmodmap/xmodmaprc" ]] && /usr/bin/xmodmap "${XDG_CONFIG_HOME}/X11/xmodmap/xmodmaprc"

#
# Dynamic window manager.
#
# Start suckless status monitor.
/usr/bin/slstatus &
# Start xss-lock to trigger slock.
/usr/bin/xss-lock -- /usr/bin/slock &
# Start suckless terminal.
/usr/bin/st &
# Start firefox.
/usr/bin/firefox &
# Start dynamic window manager.
exec /usr/bin/dwm
